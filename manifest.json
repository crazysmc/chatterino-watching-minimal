{
  "manifest_version": 3,

  "name": "Chatterino Watching Minimal",
  "short_name": "Watching",
  "version": "1.1",
  "description": "Update the /watching split on Chatterino",
  "browser_specific_settings": {
    "gecko": {
      "id": "@chatterino-watching-minimal.crazysmc",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "128": "watching.png"
  },

  "background": {
    "scripts": ["background.js"],
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Resend the Watching status to Chatterino"
  },
  "host_permissions": ["*://www.twitch.tv/*"],
  "permissions": ["nativeMessaging"]
}
